---
import { navLinks, siteConfig } from '../config/site';

const currentPath = Astro.url.pathname;

const navWithEn = [
  { label: "ホーム", en: "HOME", href: "/" },
  { label: "おすすめ教材", en: "BOOKS", href: "/#books" },
  { label: "学習資産", en: "RESOURCES", href: "/resources" },
  { label: "コミュニティ", en: "COMMUNITY", href: "/join" },
  { label: "FAQ", en: "FAQ", href: "/faq" },
  { label: "運営者紹介", en: "ABOUT", href: "/about" },
];
---

<!-- ======= SIDEBAR (PC) ======= -->
<aside class="sidebar" id="sidebar">
  <div class="sidebar__inner">
    <!-- Logo -->
    <a href="/" class="sidebar__logo">
      <img src="/assets/images/flagship-logo.svg" alt="FLAGSHIP" class="sidebar__logo-img" />
      <span class="sidebar__logo-name">FLAGSHIP</span>
    </a>

    <!-- Nav -->
    <nav class="sidebar__nav">
      <ul class="sidebar__nav-list">
        {navWithEn.map(link => (
          <li class="sidebar__nav-item">
            <a
              href={link.href}
              class={`sidebar__nav-link ${currentPath === link.href ? 'is-active' : ''}`}
            >
              <span class="sidebar__nav-ja">{link.label}</span>
              <small class="sidebar__nav-en">{link.en}</small>
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- CTA -->
    <div class="sidebar__bottom">
      <a href={siteConfig.links.slackJoin} target="_blank" rel="noopener" class="sidebar__cta">
        無料で参加する
      </a>
      <a href={`https://twitter.com/${siteConfig.twitterHandle.replace('@','')}`} target="_blank" rel="noopener" class="sidebar__twitter">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        <span>@flagship_pt</span>
      </a>
    </div>
  </div>
</aside>

<!-- ======= TOP BAR (SP) ======= -->
<header class="topbar" id="topbar">
  <a href="/" class="topbar__logo">FLAGSHIP</a>
  <button class="topbar__hamburger" id="hamburger" aria-label="メニューを開く">
    <span></span>
    <span></span>
    <span></span>
  </button>
</header>

<!-- ======= MOBILE NAV OVERLAY ======= -->
<div class="mobile-overlay" id="mobileOverlay">
  <button class="mobile-overlay__close" id="mobileClose">✕</button>
  <nav>
    <ul class="mobile-overlay__list">
      {navWithEn.map(link => (
        <li>
          <a href={link.href} class="mobile-overlay__link">
            <span>{link.label}</span>
            <small>{link.en}</small>
          </a>
        </li>
      ))}
    </ul>
    <a href={siteConfig.links.slackJoin} target="_blank" rel="noopener" class="mobile-overlay__cta">
      無料でSlackに参加する →
    </a>
  </nav>
</div>

<style>
/* ===== SIDEBAR ===== */
.sidebar {
  position: fixed;
  top: 0;
  left: 0;
  width: 260px;
  height: 100vh;
  background: #FFFFFD;
  border-right: 1px solid #F2F2F2;
  z-index: 200;
  display: none;
  overflow-y: auto;
}

@media (min-width: 1024px) {
  .sidebar { display: flex; flex-direction: column; }
}

.sidebar__inner {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 44px 32px 36px;
}

.sidebar__logo {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 6px;
  text-decoration: none;
  margin-bottom: 48px;
}

.sidebar__logo-img {
  width: 64px;
  height: auto;
}

.sidebar__logo-name {
  font-size: 1.1rem;
  font-weight: 800;
  color: #1A1A1A;
  letter-spacing: 0.12em;
  font-family: 'Montserrat', sans-serif;
}

.sidebar__nav { flex: 1; }

.sidebar__nav-list {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.sidebar__nav-link {
  display: flex;
  flex-direction: column;
  gap: 2px;
  padding: 10px 14px;
  border-radius: 10px;
  text-decoration: none;
  transition: background 0.2s ease;
  position: relative;
}

.sidebar__nav-link::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%) scaleY(0);
  width: 3px;
  height: 60%;
  background: #F06846;
  border-radius: 0 2px 2px 0;
  transition: transform 0.2s ease;
}

.sidebar__nav-link:hover::before,
.sidebar__nav-link.is-active::before {
  transform: translateY(-50%) scaleY(1);
}

.sidebar__nav-link:hover,
.sidebar__nav-link.is-active {
  background: rgba(240,104,70,0.06);
}

.sidebar__nav-ja {
  font-size: 0.88rem;
  font-weight: 700;
  color: #313131;
  letter-spacing: 0.05em;
}

.sidebar__nav-en {
  font-size: 0.68rem;
  color: #AEAEAE;
  font-family: 'Montserrat', sans-serif;
  letter-spacing: 0.12em;
  font-weight: 500;
}

.sidebar__nav-link.is-active .sidebar__nav-ja { color: #F06846; }

.sidebar__bottom {
  display: flex;
  flex-direction: column;
  gap: 14px;
  margin-top: 32px;
  padding-top: 24px;
  border-top: 1px solid #F2F2F2;
}

.sidebar__cta {
  display: block;
  text-align: center;
  padding: 12px 20px;
  background: #F06846;
  color: white;
  font-size: 0.82rem;
  font-weight: 700;
  border-radius: 8px;
  text-decoration: none;
  letter-spacing: 0.05em;
  transition: background 0.2s ease;
}

.sidebar__cta:hover { background: #D44D2E; }

.sidebar__twitter {
  display: flex;
  align-items: center;
  gap: 8px;
  text-decoration: none;
  color: #AEAEAE;
  font-size: 0.75rem;
  font-family: 'Montserrat', sans-serif;
  transition: color 0.2s;
  justify-content: center;
}

.sidebar__twitter:hover { color: #313131; }

/* ===== TOPBAR (SP) ===== */
.topbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 60px;
  background: #FFFFFD;
  border-bottom: 1px solid #F2F2F2;
  padding: 0 20px;
  z-index: 200;
}

@media (min-width: 1024px) {
  .topbar { display: none; }
}

.topbar__logo {
  font-size: 1.1rem;
  font-weight: 800;
  color: #1A1A1A;
  text-decoration: none;
  letter-spacing: 0.12em;
  font-family: 'Montserrat', sans-serif;
}

.topbar__hamburger {
  width: 28px;
  height: 20px;
  position: relative;
  background: none;
  border: none;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.topbar__hamburger span {
  display: block;
  width: 100%;
  height: 2px;
  background: #313131;
  border-radius: 2px;
  transition: all 0.3s ease;
}

/* ===== MOBILE OVERLAY ===== */
.mobile-overlay {
  position: fixed;
  inset: 0;
  background: #FFFFFD;
  z-index: 300;
  padding: 80px 40px 40px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  overflow-y: auto;
}

.mobile-overlay.is-open {
  opacity: 1;
  pointer-events: auto;
}

.mobile-overlay__close {
  position: absolute;
  top: 20px;
  right: 20px;
  background: none;
  border: none;
  font-size: 1.4rem;
  cursor: pointer;
  color: #313131;
  width: 40px;
  height: 40px;
}

.mobile-overlay__list {
  list-style: none;
  margin-bottom: 40px;
}

.mobile-overlay__link {
  display: flex;
  flex-direction: column;
  gap: 2px;
  padding: 18px 0;
  border-bottom: 1px solid #F2F2F2;
  text-decoration: none;
}

.mobile-overlay__link span {
  font-size: 1.2rem;
  font-weight: 700;
  color: #313131;
}

.mobile-overlay__link small {
  font-size: 0.7rem;
  color: #AEAEAE;
  font-family: 'Montserrat', sans-serif;
  letter-spacing: 0.15em;
}

.mobile-overlay__cta {
  display: block;
  text-align: center;
  padding: 16px;
  background: #F06846;
  color: white;
  font-size: 1rem;
  font-weight: 700;
  border-radius: 10px;
  text-decoration: none;
  margin-top: 8px;
}
</style>

<script>
  const hamburger = document.getElementById('hamburger');
  const overlay = document.getElementById('mobileOverlay');
  const closeBtn = document.getElementById('mobileClose');

  hamburger?.addEventListener('click', () => {
    overlay?.classList.add('is-open');
    document.body.style.overflow = 'hidden';
  });

  const closeMenu = () => {
    overlay?.classList.remove('is-open');
    document.body.style.overflow = '';
  };

  closeBtn?.addEventListener('click', closeMenu);

  overlay?.querySelectorAll('a').forEach(a => {
    a.addEventListener('click', closeMenu);
  });
</script>
