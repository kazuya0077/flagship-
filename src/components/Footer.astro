---
import { siteConfig } from '../config/site';
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer__grid">

      <div class="footer__brand">
        <span class="footer__logo">FLAGSHIP</span>
        <p class="footer__tagline">
          理学療法学生のための<br>
          国試・キャリア支援コミュニティ
        </p>
        <a
          href="/#join"
          class="btn btn--outline footer__btn"
        >JOIN FREE →</a>
      </div>

      <nav class="footer__nav" aria-label="フッターナビゲーション">
        <h4 class="footer__nav-title">LINKS</h4>
        <ul>
          <li><a href="/#about">About / MVV</a></li>
          <li><a href="/#service">Service</a></li>
          <li><a href="/#community">Community</a></li>
          <li><a href="/#join">Join Us</a></li>
          <li><a href="/privacy">Privacy Policy</a></li>
        </ul>
      </nav>

    </div>

    <div class="footer__bottom">
      <p class="footer__copy">© {year} FLAGSHIP. All rights reserved.</p>
      <p class="footer__built">Built for PT students who think.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid rgba(0,240,255,0.12);
    padding: 80px 0 40px;
    position: relative;
    z-index: 1;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    padding-bottom: 4rem;
    border-bottom: 1px solid rgba(255,255,255,0.06);
  }

  .footer__logo {
    display: block;
    font-family: 'Inter', sans-serif;
    font-weight: 900;
    font-size: 1.8rem;
    color: #fff;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
  }

  .footer__tagline {
    color: var(--text-dim);
    font-size: 0.88rem;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .footer__btn {
    font-size: 0.65rem;
    padding: 10px 24px;
  }

  .footer__nav-title {
    font-family: 'Inter', sans-serif;
    font-size: 0.62rem;
    letter-spacing: 0.28em;
    color: var(--accent);
    margin-bottom: 1.5rem;
  }

  .footer__nav ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .footer__nav a {
    font-size: 0.88rem;
    color: var(--text-dim);
    text-decoration: none;
    transition: color 0.3s;
  }
  .footer__nav a:hover { color: var(--accent); }

  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer__copy {
    font-family: 'Inter', sans-serif;
    font-size: 0.72rem;
    color: var(--text-dim);
  }

  .footer__built {
    font-family: 'Inter', sans-serif;
    font-size: 0.68rem;
    color: rgba(0,240,255,0.4);
    font-style: italic;
  }

  @media (max-width: 700px) {
    .footer__grid { grid-template-columns: 1fr; gap: 2.5rem; }
    .footer__bottom { flex-direction: column; align-items: flex-start; }
  }
</style>
