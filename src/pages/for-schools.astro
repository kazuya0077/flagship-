---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../config/site';

const services = [
  {
    title: "国家試験対策講座",
    desc: "国試の傾向分析、効率的な学習法、分野別解説など、ご要望に合わせた講義を行います。",
    price: "30,000円〜 / 90分"
  },
  {
    title: "学内模試・分析",
    desc: "オリジナルの模擬試験作成から、結果分析、個別指導のアドバイスまで一貫してサポートします。",
    price: "要相談"
  },
  {
    title: "学習カリキュラム監修",
    desc: "学生の自走力を高めるためのカリキュラム設計や、学内学習環境の整備をお手伝いします。",
    price: "要相談"
  }
];
---

<BaseLayout 
  title="学校関係者の方へ"
  description="理学療法士養成校（大学・専門学校）様向けのセミナー・講義依頼について。"
>
  <section class="page-hero">
    <div class="container text-center">
      <h1 class="page-hero__title scroll-fade-up">FOR SCHOOLS</h1>
      <p class="page-hero__subtitle scroll-fade-up delay-1">
        「教える」から「自ら学ぶ」へ。<br>
        学生の主体性を引き出す教育をサポートします。
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container container--narrow">
      <div class="message-box scroll-fade-up">
        <h2 class="message-title">教育と研究の<br>両立をサポートする。</h2>
        <p>
          日々の講義、実習指導、会議...。学生への指導に熱心な先生ほど、<br>
          本来注力すべき<strong>「研究活動」や「学術研鑽」</strong>の時間が削られていく現状があります。<br>
          <br>
          私たちは、国家試験対策の一部をサポートすることで、<br>
          先生方が研究や、学生一人ひとりとの対話に向き合える時間を創出します。<br>
          外部委託ではなく、「教育パートナー」としてご活用ください。
        </p>
      </div>

      <div class="services-list">
        {services.map((service, index) => (
          <div class="service-card scroll-fade-up" style={`transition-delay: ${index * 0.1}s`}>
            <h3 class="service-title">{service.title}</h3>
            <p class="service-desc">{service.desc}</p>
            <p class="service-price">参考価格: {service.price}</p>
          </div>
        ))}
      </div>

      <div class="contact-section scroll-fade-up">
        <h2 class="section-title text-center">お問い合わせ</h2>
        <p class="text-center mb-8">
          講義依頼、ご相談は以下のフォームよりお気軽にお問い合わせください。
        </p>
        <div class="text-center">
          <a href={siteConfig.links.schoolInquiryForm} target="_blank" rel="noopener noreferrer" class="btn btn--primary btn--lg">
            お問い合わせフォームへ
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background: var(--bg-cream);
    padding: var(--space-20) 0 var(--space-12);
  }
  
  .page-hero__title {
    font-size: 2.5rem;
    margin-bottom: var(--space-4);
    letter-spacing: 0.1em;
  }
  
  .container--narrow {
    max-width: 800px;
  }
  
  .message-box {
    text-align: center;
    margin-bottom: var(--space-16);
  }
  
  .message-title {
    font-size: 1.75rem;
    margin-bottom: var(--space-6);
    line-height: 1.6;
    color: var(--primary);
  }
  
  .services-list {
    display: grid;
    gap: var(--space-6);
    margin-bottom: var(--space-20);
  }
  
  .service-card {
    background: #fff;
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    border-left: 4px solid var(--primary);
  }
  
  .service-title {
    font-size: 1.25rem;
    margin-bottom: var(--space-2);
  }
  
  .service-price {
    margin-top: var(--space-4);
    font-weight: 700;
    color: var(--text-light);
  }
  
  .contact-section {
    background: var(--bg-warm);
    padding: var(--space-10);
    border-radius: var(--radius-xl);
  }
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { threshold: 0.1 });
  
  document.querySelectorAll('.scroll-fade-up').forEach(el => observer.observe(el));
</script>
