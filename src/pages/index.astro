  margin-bottom: 32px;
  line-height: 1.4;
  font-weight: 800;
}

@media (min-width: 768px) {
  .slack-cta__title { font-size: 2.6rem; }
}

.slack-cta__checklist {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-bottom: 40px;
  align-items: center;
}

.slack-cta__checklist span {
  font-size: 0.95rem;
