/* ========== ASP GRID ========== */
.asp-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20px;
  max-width: 960px;
  margin: 0 auto;
}

@media (min-width: 640px) {
  .asp-grid { grid-template-columns: 1fr 1fr; }
}

@media (min-width: 900px) {
  .asp-grid { grid-template-columns: repeat(3, 1fr); }
}

/* ========== GALLERY STRIP ========== */
.gallery-strip {
  overflow: hidden;
  padding: 0;
  background: #111;
}

.gallery-strip__track {
  display: flex;
  gap: 4px;
  animation: galleryScroll 24s linear infinite;
  width: max-content;
}

.gallery-strip__track img {
  width: 260px;
  height: 180px;
  object-fit: cover;
  opacity: 0.75;
  transition: opacity 0.3s ease;
  flex-shrink: 0;
}

.gallery-strip__track img:hover {
  opacity: 1;
}

@keyframes galleryScroll {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

